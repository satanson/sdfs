namespace protocol;

table CommonResponse {
    Code:int;
    Error:string;
}

table NetBlockBackend {
    PeerID:string;
    Address:string;
}

table NetINodeInfoRequest {
    NetINodeID:string;
    Size:int64;
    NetBlockCap:int;
    MemBlockCap:int;
}

table NetINodeInfoResponse {
    CommonResponse:CommonResponse;
    Size:int64;
    NetBlockCap:int;
    MemBlockCap:int;
}

table NetINodeNetBlockInfoRequest {
    NetINodeID:string;
    NetBlockIndex:int;
    Cap:int;
}

table NetINodeNetBlockInfoResponse {
    CommonResponse:CommonResponse;
    Len:int;
    Cap:int;
    Backends:[NetBlockBackend];
}

table NetINodePWriteRequest {
    NetINodeID:string;
    Offset:int64;
    Length:int;
    TransferBackends:[NetBlockBackend];
}

table NetINodePReadRequest {
    NetINodeID:string;
    Offset:int64;
    Length:int;
}

table NetINodePReadResponse {
    CommonResponse:CommonResponse;
    Length:int;
}
